// ==========================================
// TOURISM SERVER - PRISMA SCHEMA
// Multi-role system with Company, Guide, Driver profiles
// ==========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==========================================
// ENUMS
// ==========================================

enum UserRole {
  USER // Default role for regular travelers
  COMPANY // Tour companies (register on separate dashboard platform)
  TOUR_AGENT // Sub-accounts created by companies, can login to main platform
  GUIDE // Tour guides who create their own listings
  DRIVER // Drivers who create their own listings
  ADMIN // Platform administrators
}

enum TourDifficulty {
  easy
  moderate
  challenging
}

enum ChatType {
  DIRECT // 1-on-1 chat between two users
  GROUP // Group chat with multiple participants
}

enum NotificationType {
  CHAT_MESSAGE // New message in a chat
  CHAT_MENTION // User was mentioned with @
  INQUIRY_RECEIVED // Company/guide/driver received inquiry
  INQUIRY_RESPONSE // Recipient responded to inquiry
  BOOKING_REQUEST // Tour booking request (future)
  PROFILE_VERIFIED // Profile approved by admin (future)
  SYSTEM // System announcements
}

enum InquiryStatus {
  PENDING // Waiting for response
  RESPONDED // Recipient responded but not accepted/declined
  ACCEPTED // Recipient accepted the inquiry
  DECLINED // Recipient declined the inquiry
  EXPIRED // Inquiry expired (30 days old)
}

enum InquiryTargetType {
  TOUR
  GUIDE
  DRIVER
  COMPANY
}

enum ReviewTargetType {
  TOUR
  GUIDE
  DRIVER
  COMPANY
}

// ==========================================
// USER & AUTHENTICATION
// ==========================================

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  firstName    String    @map("first_name")
  lastName     String    @map("last_name")
  phoneNumber  String?   @map("phone_number") @db.VarChar(20)
  isActive     Boolean   @default(true) @map("is_active")
  tokenVersion Int       @default(0) @map("token_version")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at")

  // Multi-role support via junction table (users can have multiple roles)
  roles UserRoleAssignment[]

  // Company hierarchy: Tour agents belong to a parent company
  parentCompanyId String? @map("parent_company_id")
  parentCompany   User?   @relation("CompanyAgents", fields: [parentCompanyId], references: [id], onDelete: SetNull)
  tourAgents      User[]  @relation("CompanyAgents")

  // Email verification
  emailVerified              Boolean   @default(false) @map("email_verified")
  verificationToken          String?   @map("verification_token") @db.VarChar(64)
  verificationTokenExpiresAt DateTime? @map("verification_token_expires_at")

  // Password reset
  resetPasswordToken          String?   @map("reset_password_token") @db.VarChar(64)
  resetPasswordTokenExpiresAt DateTime? @map("reset_password_token_expires_at")

  // Tour agent invitation (magic link to set password)
  invitationToken          String?   @map("invitation_token") @db.VarChar(64)
  invitationTokenExpiresAt DateTime? @map("invitation_token_expires_at")

  // Account lockout (brute force protection)
  failedLoginAttempts Int       @default(0) @map("failed_login_attempts")
  lockedUntil         DateTime? @map("locked_until")

  // Profile relations (one-to-one, only if user has corresponding role)
  companyProfile Company?
  guideProfile   Guide?
  driverProfile  Driver?

  // Other relations
  tours    Tour[]
  sessions UserSession[]

  // Chat relations
  createdChats     Chat[]               @relation("CreatedChats")
  chatParticipants ChatParticipant[]    @relation("ChatParticipants")
  sentMessages     ChatMessage[]        @relation("SentMessages")
  readReceipts     MessageReadReceipt[] @relation("ReadReceipts")

  // Notification relations
  notifications Notification[] @relation("UserNotifications")

  // Inquiry relations
  createdInquiries  Inquiry[]         @relation("CreatedInquiries")
  receivedInquiries InquiryResponse[] @relation("ReceivedInquiries")

  // Review relations
  reviews Review[] @relation("UserReviews")

  // Media relations
  uploadedMedia Media[] @relation("UploadedMedia")

  @@index([email])
  @@index([isActive])
  @@index([parentCompanyId])
  @@index([verificationToken])
  @@index([resetPasswordToken])
  @@index([invitationToken])
  @@map("users")
}

// Junction table for user roles (supports multiple roles per user)
model UserRoleAssignment {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  role      UserRole
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role])
  @@index([role])
  @@map("user_roles")
}

model UserSession {
  id               String    @id @default(uuid())
  userId           String    @map("user_id")
  refreshTokenHash String    @map("refresh_token_hash")
  expiresAt        DateTime  @map("expires_at")
  revokedAt        DateTime? @map("revoked_at")
  userAgent        String?   @map("user_agent") @db.VarChar(512)
  ipAddress        String?   @map("ip_address") @db.VarChar(45)
  createdAt        DateTime  @default(now()) @map("created_at")
  lastUsedAt       DateTime  @default(now()) @map("last_used_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
  @@map("user_sessions")
}

// ==========================================
// COMPANY PROFILE
// ==========================================

model Company {
  id                 String   @id @default(uuid())
  userId             String   @unique @map("user_id")
  companyName        String   @map("company_name") @db.VarChar(255)
  description        String?  @db.Text
  registrationNumber String?  @unique @map("registration_number") @db.VarChar(100)
  logoUrl            String?  @map("logo_url") @db.VarChar(512)
  websiteUrl         String?  @map("website_url") @db.VarChar(512)
  phoneNumber        String?  @map("phone_number") @db.VarChar(20)
  isVerified         Boolean  @default(false) @map("is_verified")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  // Relation to User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Tours owned by this company
  tours Tour[]

  // Rating fields
  averageRating Decimal? @map("average_rating") @db.Decimal(3, 2)
  reviewCount   Int      @default(0) @map("review_count")

  @@index([isVerified])
  @@index([companyName])
  @@index([averageRating])
  @@map("companies")
}

// ==========================================
// GUIDE PROFILE
// ==========================================

model Guide {
  id                String   @id @default(uuid())
  userId            String   @unique @map("user_id")
  bio               String?  @db.Text
  languages         Json     @default("[]") // JSON array of language codes
  yearsOfExperience Int?     @map("years_of_experience")
  photoUrl          String?  @map("photo_url") @db.VarChar(512)
  phoneNumber       String?  @map("phone_number") @db.VarChar(20)
  isVerified        Boolean  @default(false) @map("is_verified")
  isAvailable       Boolean  @default(true) @map("is_available")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relation to User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Locations where guide operates (many-to-many)
  locations GuideLocation[]

  // Price fields
  pricePerDay Decimal? @map("price_per_day") @db.Decimal(10, 2)
  currency    String   @default("GEL") @db.VarChar(3)

  // Rating fields
  averageRating Decimal? @map("average_rating") @db.Decimal(3, 2)
  reviewCount   Int      @default(0) @map("review_count")

  @@index([isVerified])
  @@index([isAvailable])
  @@index([averageRating])
  @@map("guides")
}

// ==========================================
// DRIVER PROFILE
// ==========================================

model Driver {
  id              String   @id @default(uuid())
  userId          String   @unique @map("user_id")
  bio             String?  @db.Text
  vehicleType     String?  @map("vehicle_type") @db.VarChar(100)
  vehicleCapacity Int?     @map("vehicle_capacity")
  vehicleMake     String?  @map("vehicle_make") @db.VarChar(100)
  vehicleModel    String?  @map("vehicle_model") @db.VarChar(100)
  vehicleYear     Int?     @map("vehicle_year")
  licenseNumber   String?  @map("license_number") @db.VarChar(50)
  photoUrl        String?  @map("photo_url") @db.VarChar(512)
  phoneNumber     String?  @map("phone_number") @db.VarChar(20)
  isVerified      Boolean  @default(false) @map("is_verified")
  isAvailable     Boolean  @default(true) @map("is_available")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relation to User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Locations where driver operates (many-to-many)
  locations DriverLocation[]

  // Rating fields
  averageRating Decimal? @map("average_rating") @db.Decimal(3, 2)
  reviewCount   Int      @default(0) @map("review_count")

  @@index([isVerified])
  @@index([isAvailable])
  @@index([vehicleType])
  @@index([averageRating])
  @@map("drivers")
}

// ==========================================
// LOCATION
// ==========================================

model Location {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  region    String?  @db.VarChar(255)
  country   String   @default("Georgia") @db.VarChar(100)
  latitude  Decimal? @db.Decimal(10, 8)
  longitude Decimal? @db.Decimal(11, 8)
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Many-to-many relations
  tours   TourLocation[]
  guides  GuideLocation[]
  drivers DriverLocation[]

  @@unique([name, country], name: "name_country")
  @@index([isActive])
  @@index([region])
  @@map("locations")
}

// ==========================================
// TOUR
// ==========================================

model Tour {
  id                  String          @id @default(uuid())
  ownerId             String          @map("owner_id")
  companyId           String?         @map("company_id")
  title               String          @db.VarChar(255)
  summary             String?         @db.Text
  description         String?         @db.Text
  price               Decimal         @db.Decimal(10, 2)
  currency            String          @default("GEL") @db.VarChar(3)
  city                String?         @db.VarChar(100)
  startLocation       String?         @map("start_location") @db.VarChar(100)
  originalPrice       Decimal?        @map("original_price") @db.Decimal(10, 2)
  durationMinutes     Int?            @map("duration_minutes")
  maxPeople           Int?            @map("max_people")
  difficulty          TourDifficulty?
  category            String?         @db.VarChar(100)
  isActive            Boolean         @default(true) @map("is_active")
  isInstantBooking    Boolean         @default(false) @map("is_instant_booking")
  hasFreeCancellation Boolean         @default(false) @map("has_free_cancellation")
  isFeatured          Boolean         @default(false) @map("is_featured")
  createdAt           DateTime        @default(now()) @map("created_at")
  updatedAt           DateTime        @updatedAt @map("updated_at")
  nextAvailableDate   DateTime?       @map("next_available_date")
  startDate           DateTime?       @map("start_date")

  // Relations
  owner   User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  company Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)

  // Locations for this tour (many-to-many)
  locations TourLocation[]

  // Rating fields
  averageRating Decimal? @map("average_rating") @db.Decimal(3, 2)
  reviewCount   Int      @default(0) @map("review_count")

  @@index([ownerId])
  @@index([companyId])
  @@index([isActive])
  @@index([isFeatured])
  @@index([price])
  @@index([category])
  @@index([city])
  @@index([averageRating])
  @@map("tours")
}

// ==========================================
// JUNCTION TABLES (Many-to-Many)
// ==========================================

model TourLocation {
  tourId     String   @map("tour_id")
  locationId String   @map("location_id")
  order      Int      @default(0) // Order of locations in tour itinerary
  createdAt  DateTime @default(now()) @map("created_at")

  tour     Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@id([tourId, locationId])
  @@index([locationId])
  @@map("tour_locations")
}

model GuideLocation {
  guideId    String   @map("guide_id")
  locationId String   @map("location_id")
  isPrimary  Boolean  @default(false) @map("is_primary")
  createdAt  DateTime @default(now()) @map("created_at")

  guide    Guide    @relation(fields: [guideId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@id([guideId, locationId])
  @@index([locationId])
  @@map("guide_locations")
}

model DriverLocation {
  driverId   String   @map("driver_id")
  locationId String   @map("location_id")
  isPrimary  Boolean  @default(false) @map("is_primary")
  createdAt  DateTime @default(now()) @map("created_at")

  driver   Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@id([driverId, locationId])
  @@index([locationId])
  @@map("driver_locations")
}

// ==========================================
// CHAT SYSTEM
// ==========================================

model Chat {
  id        String   @id @default(uuid())
  type      ChatType
  name      String?  @db.VarChar(100) // Only for group chats
  creatorId String   @map("creator_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  creator      User              @relation("CreatedChats", fields: [creatorId], references: [id], onDelete: Cascade)
  participants ChatParticipant[]
  messages     ChatMessage[]

  @@index([creatorId])
  @@index([type])
  @@index([updatedAt])
  @@map("chats")
}

model ChatParticipant {
  id         String   @id @default(uuid())
  chatId     String   @map("chat_id")
  userId     String   @map("user_id")
  joinedAt   DateTime @default(now()) @map("joined_at")
  lastReadAt DateTime @default(now()) @map("last_read_at")

  // Relations
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation("ChatParticipants", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([chatId, userId])
  @@index([userId])
  @@index([chatId])
  @@map("chat_participants")
}

model ChatMessage {
  id             String   @id @default(uuid())
  chatId         String   @map("chat_id")
  senderId       String   @map("sender_id")
  content        String   @db.Text
  mentionedUsers Json     @default("[]") @map("mentioned_users") // JSON array of user IDs
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  chat         Chat                 @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender       User                 @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  readReceipts MessageReadReceipt[]

  @@index([chatId, createdAt])
  @@index([senderId])
  @@map("chat_messages")
}

model MessageReadReceipt {
  id        String   @id @default(uuid())
  messageId String   @map("message_id")
  userId    String   @map("user_id")
  readAt    DateTime @default(now()) @map("read_at")

  // Relations
  message ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User        @relation("ReadReceipts", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([userId])
  @@index([messageId])
  @@map("message_read_receipts")
}

// ==========================================
// NOTIFICATION SYSTEM
// ==========================================

model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType
  title     String           @db.VarChar(255)
  message   String           @db.Text
  data      String?          @db.Text // JSON metadata (chatId, senderId, etc.)
  isRead    Boolean          @default(false) @map("is_read")
  createdAt DateTime         @default(now()) @map("created_at")

  // Relations
  user User @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead, createdAt])
  @@index([userId, createdAt])
  @@index([type])
  @@map("notifications")
}

// ==========================================
// INQUIRY SYSTEM
// ==========================================

model Inquiry {
  id              String            @id @default(uuid())
  userId          String            @map("user_id") // User who created inquiry
  targetType      InquiryTargetType @map("target_type")
  targetIds       String            @map("target_ids") @db.Text // JSON array of tour/guide/driver IDs
  subject         String            @db.VarChar(255)
  message         String            @db.Text
  requiresPayment Boolean           @default(false) @map("requires_payment") // true if >2 targets
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  expiresAt       DateTime?         @map("expires_at") // 30 days from creation

  // Relations
  user      User              @relation("CreatedInquiries", fields: [userId], references: [id], onDelete: Cascade)
  responses InquiryResponse[]

  @@index([userId, createdAt])
  @@index([createdAt])
  @@map("inquiries")
}

model InquiryResponse {
  id          String        @id @default(uuid())
  inquiryId   String        @map("inquiry_id")
  recipientId String        @map("recipient_id") // Company/guide/driver user ID
  status      InquiryStatus @default(PENDING)
  message     String?       @db.Text
  respondedAt DateTime?     @map("responded_at")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  // Relations
  inquiry   Inquiry @relation(fields: [inquiryId], references: [id], onDelete: Cascade)
  recipient User    @relation("ReceivedInquiries", fields: [recipientId], references: [id], onDelete: Cascade)

  @@unique([inquiryId, recipientId])
  @@index([recipientId, status])
  @@index([inquiryId])
  @@map("inquiry_responses")
}

// ==========================================
// REVIEWS & RATINGS
// ==========================================

model Review {
  id         String           @id @default(uuid())
  userId     String           @map("user_id")
  targetType ReviewTargetType @map("target_type")
  targetId   String           @map("target_id")
  rating     Int              // 1-5 stars
  comment    String?          @db.Text
  createdAt  DateTime         @default(now()) @map("created_at")
  updatedAt  DateTime         @updatedAt @map("updated_at")

  // Relations
  user User @relation("UserReviews", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetType, targetId], name: "user_target_unique")
  @@index([targetType, targetId, createdAt])
  @@index([userId])
  @@index([rating])
  @@map("reviews")
}

// ==========================================
// AUDIT LOG
// ==========================================

enum AuditAction {
  // Authentication
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  TOKEN_REFRESH
  PASSWORD_CHANGE
  PASSWORD_RESET_REQUEST
  PASSWORD_RESET_COMPLETE
  EMAIL_VERIFICATION

  // User Management
  USER_CREATE
  USER_UPDATE
  USER_DELETE
  USER_RESTORE
  USER_ROLE_ADD
  USER_ROLE_REMOVE
  ACCOUNT_LOCK
  ACCOUNT_UNLOCK

  // Profile Management
  COMPANY_CREATE
  COMPANY_UPDATE
  COMPANY_VERIFY
  GUIDE_CREATE
  GUIDE_UPDATE
  GUIDE_VERIFY
  DRIVER_CREATE
  DRIVER_UPDATE
  DRIVER_VERIFY

  // Content Management
  TOUR_CREATE
  TOUR_UPDATE
  TOUR_DELETE
  MEDIA_UPLOAD
  MEDIA_DELETE

  // Admin Actions
  ADMIN_ACTION
}

model AuditLog {
  id           String      @id @default(uuid())
  action       AuditAction
  userId       String?     @map("user_id") // Who performed the action (null for system/anonymous)
  targetType   String?     @map("target_type") @db.VarChar(50) // Entity type affected (user, tour, company, etc.)
  targetId     String?     @map("target_id") @db.VarChar(255) // ID of the affected entity
  ipAddress    String?     @map("ip_address") @db.VarChar(45)
  userAgent    String?     @map("user_agent") @db.VarChar(512)
  metadata     String?     @db.Text // JSON with additional context
  status       String      @default("SUCCESS") @db.VarChar(20) // SUCCESS, FAILED, BLOCKED
  errorMessage String?     @map("error_message") @db.Text
  createdAt    DateTime    @default(now()) @map("created_at")

  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@index([targetType, targetId])
  @@index([createdAt])
  @@index([status])
  @@map("audit_logs")
}

// ==========================================
// MEDIA / FILE UPLOADS
// ==========================================

model Media {
  id           String   @id @default(uuid())
  filename     String   @db.VarChar(255) // Generated unique filename (e.g., "abc123-mountain.jpg")
  originalName String   @map("original_name") @db.VarChar(255) // Original uploaded filename
  mimeType     String   @map("mime_type") @db.VarChar(100) // e.g., "image/jpeg"
  size         Int      // File size in bytes
  url          String   @db.VarChar(512) // Public URL path (e.g., "/uploads/tours/abc123-mountain.jpg")
  entityType   String   @map("entity_type") @db.VarChar(50) // "tour", "company", "guide", "driver", "user"
  entityId     String   @map("entity_id") @db.VarChar(255) // ID of the related entity
  uploadedBy   String?  @map("uploaded_by") // User ID who uploaded the file (null if user deleted)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  uploader User? @relation("UploadedMedia", fields: [uploadedBy], references: [id], onDelete: SetNull)

  @@index([entityType, entityId])
  @@index([uploadedBy])
  @@index([createdAt])
  @@map("media")
}
