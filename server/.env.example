NODE_ENV=development
PORT=3000

# Database (Docker MySQL)
# Prisma connection string (required)
DATABASE_URL="mysql://tourism_user:tourism_password@localhost:3306/tourism_db"

# Individual DB variables (optional, for backwards compatibility)
DB_HOST=localhost
DB_PORT=3306
DB_USER=tourism_user
DB_PASSWORD=tourism_password
DB_NAME=tourism_db

# JWT Secrets (CHANGE THESE IN PRODUCTION - must be at least 32 chars)
ACCESS_TOKEN_SECRET="your-super-secret-access-token-key-change-me"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-change-me"
ACCESS_TOKEN_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Email configuration (Resend - https://resend.com)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx

# Email sender (format: "Name <email@domain.com>")
# In development, use Resend's test domain: onboarding@resend.dev
# In production, use your verified domain
EMAIL_FROM="Tourism Georgia <noreply@your-verified-domain.com>"

# Admin email for contact form submissions (optional)
# If not set, contact form emails will be sent to EMAIL_FROM address
ADMIN_EMAIL=admin@your-verified-domain.com

# Frontend URL for email links
# Used for: email verification, password reset, tour agent invitations
# Change this when deploying to production (e.g., https://yoursite.com)
FRONTEND_URL=http://localhost:5173

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI Provider: gemini | groq | openrouter (default: gemini)
# Switch this single value to change the AI backend
AI_PROVIDER=gemini

# Gemini AI Configuration (used when AI_PROVIDER=gemini)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Groq AI Configuration (used when AI_PROVIDER=groq)
# Get your API key from: https://console.groq.com/keys
# Free tier includes generous rate limits for Llama models
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# OpenRouter AI Configuration (used when AI_PROVIDER=openrouter)
# Get your API key from: https://openrouter.ai/keys
# Free tier includes Qwen models with rate limits
OPENROUTER_API_KEY=
OPENROUTER_MODEL=qwen/qwen3-235b-a22b:free

# Shared AI Configuration
AI_RATE_LIMIT_PER_MINUTE=10
AI_INITIAL_CREDITS=10

# Media Upload Configuration
# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Upload directory (relative to server root)
UPLOAD_DIR=uploads

# Static file serving URL prefix
STATIC_URL_PREFIX=/uploads
